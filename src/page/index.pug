            {
              img: "@img/temp/image2.png",
              title: "Amet eius",
              text: "Amet eius vel dignissimos veritatis nesciunt inventore excepturi, suscipit autem vitae."
            },
            {
              img: "@img/temp/image3.png",
              title: "Minus sed beatae",
              text: "Minus sed beatae reprehenderit ad nesciunt"
            }
          ]

        each item in cardList
          include /component/module/card/card

